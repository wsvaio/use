{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "strict": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,

    "baseUrl": "./",
    "paths": {
      "@wsvaio/use": ["src/index.ts"],
      "@/*": ["playground/*"]
    }
  },
  "exclude": ["垃圾桶"]
}
