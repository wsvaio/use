{
  "name": "@wsvaio/use",
  "type": "module",
  "version": "1.0.8",
  "description": "这是一个 Vue 3 实用工具库，提供了一系列实用的 Vue 3 组合式 API，帮助您更轻松地构建 Vue 3 项目。",
  "author": "wsvaio <wsvaio@qq.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/wsvaio",
  "homepage": "https://github.com/wsvaio/use#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wsvaio/use.git"
  },
  "bugs": {
    "url": "https://github.com/wsvaio/use/issues"
  },
  "keywords": [
    "wsvaio",
    "vue",
    "composable",
    "use"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./*": "./*"
  },
  "main": "index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite ./playground",
    "test": "vitest",
    "build": "esno ./scripts/index.ts && tsup",
    "commit": "pnpm docs:build && git add docs && czg",
    "docs:build": "esno ./scripts/index.ts && pnpm typedoc",
    "prepublishOnly": "pnpm build",
    "log": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "lint:eslint": "eslint --cache --max-warnings 0  \"{src,mock}/**/*.{vue,ts,tsx}\" --fix",
    "lint:prettier": "prettier --write  \"src/**/*.{js,json,tsx,css,less,scss,vue,html,md}\"",
    "lint:lint-staged": "lint-staged",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@wsvaio/utils": "^1.0.12"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@types/node": "^20.3.1",
    "@vitejs/plugin-vue": "^4.2.3",
    "@wsvaio/commitlint-config": "^0.0.6",
    "@wsvaio/eslint-config": "^0.0.6",
    "conventional-changelog-cli": "^3.0.0",
    "czg": "^1.6.1",
    "eslint": "^8.43.0",
    "esno": "^0.16.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "simple-git-hooks": "^2.8.1",
    "tsup": "^7.0.0",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.3",
    "vite": "^4.3.9"
  }
}
